# 1. Read 2 table from html page https://en.wikipedia.org/wiki/Indiaâ€“Pakistan_cricket_rivalry and find the number of ODI matches won by India
#
install.packages("rvest")
library(rvest)
getwd()
setwd("C:/Program Files/AMMA 2017/Data")

theurl <- "https://en.wikipedia.org/wiki/India%E2%80%93Pakistan_cricket_rivalry"
file<-read_html(theurl)
tables<-html_nodes(file, "table")
table1 <- html_table(tables[7], fill = TRUE)
View(table1)
DFDJ <- as.data.frame(table1)
View(DFDJ)
DFDJ$Tests
top5 <- DFDJ[rev(order(DFDJ$Tests)),"Top 5 highest number of test wins"][1:5]
View(top5)
